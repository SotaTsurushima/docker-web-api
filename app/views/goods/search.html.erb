<%= link_to 'トップに戻る', '/' %>
<h1>楽天API</h1>
<div class="content">
  <div id="search-box">
    <%= form_tag('/goods/search', method: :get)do %>
      <%= text_field_tag :good, "", id: "good_search", name: "keyword", placeholder: "キーワードを入力してください", style: "width: 200px;"%>
      <button title="検索" type="submit">検索</button>
    <% end %>
  </div>
  <h2>検索結果</h2>
  <%# good_listを表示している %>
  <div id="good_list">
    <%= render partial: 'good_list' %>
  </div>
</div>